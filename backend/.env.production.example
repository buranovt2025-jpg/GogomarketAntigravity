# Production Environment Variables

# Application
NODE_ENV=production
PORT=3000

# Database (PostgreSQL)
DATABASE_HOST=your-production-db-host.com
DATABASE_PORT=5432
DATABASE_USERNAME=gogomarket_user
DATABASE_PASSWORD=your-strong-password-here
DATABASE_NAME=gogomarket_prod

# JWT Authentication
JWT_SECRET=your-very-secure-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Payme Payment Gateway
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key
PAYME_BASE_URL=https://checkout.paycom.uz/api
PAYME_TEST_MODE=false

# Click Payment Gateway
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SERVICE_ID=your-click-service-id
CLICK_SECRET_KEY=your-click-secret-key
CLICK_BASE_URL=https://api.click.uz/v2/merchant
CLICK_TEST_MODE=false

# Platform Settings
PLATFORM_COMMISSION_RATE=0.1
DEFAULT_CURRENCY=UZS

# AWS S3 (for media storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=gogomarket-media-prod

# Redis (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Email (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@gogomarket.uz
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=GOGOMARKET <noreply@gogomarket.uz>

# SMS Gateway (for OTP)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://sms.uz/api/send

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=https://gogomarket.uz,https://admin.gogomarket.uz

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
ALLOWED_VIDEO_TYPES=mp4,mov

# WebSocket (for real-time features)
WS_PORT=3001
